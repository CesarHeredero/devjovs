<main class="contenedor">
    <form action="/editar-perfil" method="POST" enctype="multipart/form-data" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre" value="{{usuario.nombre}}">
        </div>
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Email" value="{{usuario.email}}">
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Password">
        </div>
        <div class="campo">
            <img src="" alt="">
            <label for="imagen"></label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <input type="submit" value="Gardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>