<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Tu Email" >
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Tu Contraseña" >
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una cuenta</a>
            <a href="/reestablecer-password">Olvide mi contraseña</a>
        </div>
        <div class="campo">
            <input type="submit" value="Inicar Sesion" class="btn btn-azul">
        </div>
    </form>
</main>